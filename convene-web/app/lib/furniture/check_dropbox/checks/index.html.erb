<turbo-frame id="check-dropbox">
  <%= @checks.where("data->>'status' = 'ready_for_deposit' OR data->>'status' is null").size %> checks ready for deposit
  <%= @checks.where("data->>'status' = 'uncleared'").size %> checks deposited but not yet cleared
  <%= @checks.where("data->>'status' = 'cleared'").size %> checks deposited and cleared.
  <% @checks.each do |check| %>
    <p>
      Payer name: <%= check.payer_name %><br>
      Payer email: <%= check.payer_email %><br/>
      Amount: <%= check.amount %><br/>
      Memo: <%= check.memo %><br  />
      Account Number: <%= check.account_number %><br />
      Routing Number: <%= check.routing_number %><br />
    </p>
    <%- if check.ready_for_deposit? %>
      I'm ready for deposit!
    <%- end %>

    <%- if check.uncleared? %>
      I'm deposited, but it hasn't been confirmed that I cleared yet!
    <%- end %>

    <%- if check.cleared? %>
      I'm deposited, and itÂ has been confirmed that I cleared!
    <%- end %>
    <hr/>
  <% end %>
</turbo-frame>
