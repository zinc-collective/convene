<div class="room-card <%= "--#{room.access_level}" %>" id="<%= room.name %>">
  <header>
    <h3><%= room.name %></h3>
    <%- if room.locked? %>
      <span class="fas fa-lock"></span>
    <%- end %>
    <%- if room.locked? && room.enterable?(current_access_code) %>
      <span class="ml-2 fas fa-key"></span>
    <%- end %>
  </header>
  <footer>
    <div class="room-door_enter">
      <%= link_to workspace_room_path(room.workspace, room) do %>
        <span class="icon-solid phone-alt-icon">Enter Room</span>
      <% end %>
    </div>
  </footer>
</div>
