{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
    "aws_secret_key": "{{env `AWS_SECRET_KEY`}}",
    "client_domain": "{{env `CLIENT_DOMAIN`}}",
    "instance_type": "t2.micro",
    "region": "{{env `REGION`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `region`}}",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "ubuntu/images/*ubuntu-focal-20.04-amd64-server-*",
        "root-device-type": "ebs"
      },
      "owners": ["099720109477"],
      "most_recent": true
    },
    "instance_type": "{{user `instance_type`}}",
    "ssh_username": "ubuntu",
    "ami_name": "convene-jitsi-{{user `client_domain`}} {{timestamp}}"
  }],
  "provisioners": [{
    "environment_vars": [
      "CLIENT_DOMAIN={{ user `client_domain` }}"
    ],
    "type": "shell",
    "script": "jitsi/install"
  },
  {
    "type": "ansible",
    "__comment": [
      "Ensure we are using the default user created by AWS",
      "https://www.packer.io/docs/provisioners/ansible#user"
    ],
    "user": "ubuntu",
    "playbook_file": "operators.yml"
  }]
}
