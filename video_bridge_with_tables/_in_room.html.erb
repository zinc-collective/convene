<%- if defined? table %>
  <div
    data-controller="video-bridge"
    data-video-bridge-target="wrapper"
    data-video-bridge-video-host="<%= table.video_host %>"
    data-video-bridge-name="<%= table.full_slug %>"
  >
  </div>

  <script defer src='https://<%= current_space.jitsi_meet_domain %>/external_api.js'></script>
  <%= javascript_include_tag "furniture_video_bridge", "data-turbo-track": "reload", defer: true %>
<%- end %>

<h3>Tables</h3>
<%- furniture.tables.each do |table| %>
  <%= link_to table.name,
              space_room_furniture_table_path(room.space, room, table) %>
<%- end %>