
<%= render CardComponent.new(dom_id: dom_id(delivery_area), classes: "flex flex-col justify-between gap-y-2 w-full") do %>
  <header class="flex font-bold">
    <%= label %>
    <%- if delivery_area.archived? %>
      <span class="italic">(archived)</span>
    <%- end %>
  </header>

  <div class="grow flex flex-col justify-between">
    <div class="text-sm">
      <%= render Marketplace::Cart::DeliveryExpectationsComponent.new(order_by: delivery_area.order_by, delivery_window: delivery_area.delivery_window, cart: example_cart) %>
    </div>

    <div class="text-right mt-3 italic">
      <%= price  %>
    </div>
  </div>

  <footer class="mt-3 flex flex-row justify-between">
    <%= render edit_button if edit_button? %>
    <%= render archive_button if archive_button?  %>
    <%= render destroy_button if destroy_button?  %>
  </footer>
<%- end %>
