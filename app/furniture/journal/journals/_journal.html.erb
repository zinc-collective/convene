<section>
  <div class="flex flex-wrap">
    <%= render policy_scope(journal.entries) %>
  </div>

  <%- new_entry = journal.entries.new %>
  <%- if policy(new_entry).new? %>
    <footer class="text-center">
    <%= link_to "New Journal Entry", new_entry.location(:new) %>
    </footer>
  <%- end %>
</section>
