  <%= turbo_frame_tag(marketplace, data: { turbo_action: :advance }) do %>
    <%- if policy(marketplace).edit? %>
      <%= render Marketplace::ManagementComponent.new(marketplace: marketplace) do %>
        <%= yield  %>
      <%- end %>
    <%- else %>
      <%= yield  %>
    <%- end %>
  <%- end %>
<%- end %>
<%= render template: "layouts/application" %>
