<div style='background-color: <%= header_bg_color %>; color: <%= header_txt_color %>' class="flex flex-col md:flex-row flex-wrap justify-between sm:px-5 py-5 items-center">
  <h1><%= link_to(@space.name, @space.entrance.location, class: "no-underline")  %></h1>
  <div class="flex flex-col md:flex-row gap-5">
    <% sections.each do |section| %>
      <%= link_to section.name, polymorphic_path(section.location), id: dom_id(section, :link_to), class: "group no-underline" %>
    <% end %>
  </div>
</div>
</div>
