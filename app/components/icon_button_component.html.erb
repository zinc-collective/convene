<%- if @disabled %>
  <span class='no-underline bg-transparent hover:bg-primary-100 button'><%= @label %></span>
<%- else %>
  <%= link_to @label,
              @href,
              title: @title,
              method: @method,
              data: data,
              class: 'no-underline bg-transparent hover:bg-primary-100 button' %>
<%- end %>
