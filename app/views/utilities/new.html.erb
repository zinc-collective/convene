<%- breadcrumb :new_utility, utility %>

<%= render CardComponent.new(classes: "mt-3") do %>
  <%= form_with(model: utility.location) do |form| %>
    <%= render "select", attribute: :utility_slug, options: Utility.registry.keys, form: form,
        prompt: "-- Pick a utility type --", include_blank: false %>
    <%= render "text_field", attribute: :name, form: form %>
    <%= form.submit %>
  <%- end %>
<%- end %>
