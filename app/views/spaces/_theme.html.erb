<div class="mt-3 gap-y-3">
  <%= render CardComponent.new do %>
    <h3>Theme</h3>
    <p class="text-sm">Customize the look and feel of your Space</p>
    <%= form_with(model: space.location) do |space_form| %>
      <div>
        <%= space_form.label :show_header, "Show a site header with section navigation" %>
        <%= space_form.check_box :show_header %>
        <%= space_form.label :header_bg_color, "Choose a header background color" %>
        <%= space_form.color_field :header_bg_color %>
        <%= space_form.label :header_txt_color, "Choose a header text color" %>
        <%= space_form.color_field :header_txt_color %>
      </div>
      <%= space_form.submit %>
    <%- end %>
  <% end %>
</div>
