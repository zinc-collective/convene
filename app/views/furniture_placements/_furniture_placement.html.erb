<%= turbo_frame_tag furniture_placement do %>
  <%- if editing? %>
    <%= link_to t('icons.edit'), [:edit, furniture_placement.room.space, furniture_placement.room, furniture_placement], class: 'no-underline', title: "Configure #{furniture_placement.furniture.model_name.human.titleize}" %>
  <%- end %>
  <%= render partial: furniture_placement.furniture.in_room_template,
            locals: { furniture: furniture_placement.furniture, room: furniture_placement.room,
                      person: current_person } %>

<%- end %>