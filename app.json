{
  "name": "Convene Web",
  "env": {
    "APP_BASE": {
      "description": "Relative path for Convene Web, consume by Heroku mono repo buildpack",
      "value": "convene-web"
    },
    "LOCKBOX_MASTER_KEY": {
      "description": "Encrypts data within the database",
      "generator": "secret"
    }
  },
  "buildpacks": [
    {
      "url": "https://github.com/lstoll/heroku-buildpack-monorepo"
    },
    {
      "url": "https://github.com/heroku/heroku-buildpack-ruby"
    }
  ],
  "addons": [
    {
      "plan": "heroku-postgresql:hobby-dev",
      "options": {
        "version": "12"
      }
    }
  ],
  "environments": {
    "review": {
      "formation": {
        "web": {
          "quantity": 1,
          "size": "hobby"
        }
      },
      "env": {
        "FEATURE_DEMO": {
          "description": "Seed demo data",
          "value": "true"
        },
        "FEATURE_SYSTEM_TEST": {
          "description": "Seed Test data",
          "value": "true"
        },
        "LOCKBOX_MASTER_KEY": {
          "description": "Encrypts data within the database",
          "generator": "secret"
        }
      },
      "addons": [
        {
          "plan": "heroku-postgresql:hobby-dev",
          "options": {
            "verison": "12"
          }
        }
      ]
    }
  }
}
